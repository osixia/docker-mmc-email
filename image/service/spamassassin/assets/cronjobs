# Update spamassassin rules
20 02 * * * root /usr/bin/sa-update 2>&1 | /usr/bin/logger -s -t sa-update

# Learning Spam
30 02 * * * root /usr/bin/sa-learn --ham /var/mail/vhosts/*/*/cur/* 2>&1 | /usr/bin/logger -s -t sa-learn
40 02 * * * root /usr/bin/sa-learn --spam /var/mail/vhosts/*/*/.Spam/cur/* 2>&1 | /usr/bin/logger -s -t sa-learn
